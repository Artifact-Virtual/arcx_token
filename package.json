{
  "name": "arcx-token",
  "version": "1.0.0",
  "description": "ARCx Token smart contract and deployment scripts",
  "main": "scripts/deploy_arcx.ts",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy_arcx.ts",
    "deploy:base": "npx hardhat run scripts/deploy_arcx.ts --network base",
    "deploy:base-sepolia": "npx hardhat run scripts/deploy_arcx.ts --network base-sepolia",
    "test": "hardhat test",
    "test:coverage": "npx hardhat coverage",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "verify": "npx hardhat verify",
    "clean": "npx hardhat clean",
    "typechain": "npx hardhat typechain",
    "node": "npx hardhat node",
    "lint": "npx solhint 'contracts/**/*.sol'",
    "lint:js": "npx eslint . --ext .ts,.js",
    "format": "npx prettier --write 'contracts/**/*.sol'",
    "format:js": "npx prettier --write '**/*.{ts,js,json}'",
    "audit": "npm audit",
    "audit:fix": "npm audit fix"
  },
  "dependencies": {
    "@nomicfoundation/solidity-analyzer-win32-x64-msvc": "^0.1.2",
    "@uniswap/sdk-core": "^7.7.2",
    "@uniswap/universal-router-sdk": "^4.19.7",
    "@uniswap/v4-core": "^1.0.2",
    "@uniswap/v4-periphery": "^1.0.3",
    "@uniswap/v4-sdk": "^1.21.4",
    "axios": "^1.7.7",
    "bignumber.js": "^9.1.2",
    "cross-fetch": "^4.0.0",
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2",
    "web3-utils": "^4.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@nomicfoundation/ignition-core": "^0.15.13",
    "@nomicfoundation/solidity-analyzer-linux-x64-gnu": "^0.1.2",
    "@openzeppelin/contracts": "^4.9.6",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.2.0",
    "chai": "^4.5.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "ethers": "^6.13.4",
    "hardhat": "^2.26.2",
    "hardhat-gas-reporter": "^2.3.0",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "solhint": "^5.0.3",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "cookie": ">=0.7.0",
    "semver": ">=7.5.3",
